{
	"name": "@natlibfi/fixugen",
	"description": "Generate Node.js unit tests from fixtures and callbacks",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/fixugen-js",
	"bugs": {
		"url": "https://github.com/natlibfi/fixugen-js/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/fixugen-js.git"
	},
	"license": "MIT",
	"version": "1.1.0",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=14"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prepare": "npm run build",
		"prepublishOnly": "npm run build",
		"start": "node dist/index.js",
		"lint": "eslint src",
		"lint:dev": "eslint --fix src",
		"test:base": "cross-env NODE_ENV=test mocha --require @babel/register --reporter-option maxDiffSize=15000 src/*.spec.js",
		"test": "npm run lint && npm run test:base",
		"test:dev": "npm run lint:dev && npm run coverage",
		"coverage": "npm run coverage:unit && npm run coverage:report",
		"coverage:unit": "nyc --silent npm run test:base",
		"coverage:report": "nyc report",
		"build": "babel src --source-maps --copy-files --delete-dir-on-start --out-dir=dist",
		"dev:test": "cross-env DEBUG=@natlibfi/* NODE_ENV=test nodemon -w src -w test-fixtures --exec 'clear && npm run test:dev'"
	},
	"devDependencies": {
		"@babel/cli": "^7.17.10",
		"@babel/core": "^7.18.2",
		"@babel/eslint-parser": "^7.18.2",
		"@babel/node": "^7.17.10",
		"@babel/preset-env": "^7.18.2",
		"@babel/register": "^7.17.7",
		"@natlibfi/eslint-config-melinda-backend": "^2.0.0",
		"@natlibfi/fixura": "^2.2.1",
		"babel-plugin-istanbul": "^6.1.1",
		"chai": "^4.3.6",
		"cross-env": "^7.0.3",
		"eslint": "^8.16.0",
		"mocha": "^10.0.0",
		"nock": "^13.2.4",
		"nodemon": "^2.0.16",
		"nyc": "^15.1.0"
	},
	"eslintConfig": {
		"extends": "@natlibfi/melinda-backend"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": "maintained node versions"
				}
			]
		],
		"env": {
			"test": {
				"plugins": [
					"istanbul"
				]
			}
		}
	},
	"nyc": {
		"exclude": [
			"*/*.spec.js"
		],
		"reporter": [
			"text"
		],
		"require": [
			"@babel/register"
		],
		"sourceMap": false,
		"instrument": false,
		"lines": 80,
		"statements": 80,
		"functions": 80,
		"branches": 80
	}
}
